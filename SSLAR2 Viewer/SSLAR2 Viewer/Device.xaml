<Window x:Class="SSLAR2_Viewer.FrmDevice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Device" Height="210" Width="658" Loaded="WindowLoaded" WindowStartupLocation="CenterScreen" Icon="/SSLAR2%20Viewer;component/Images/seal2.ico">
    <Grid>
        <DataGrid AutoGenerateColumns="False" Name="dataGrid1" Margin="0,0,126,0" SelectionMode="Single" SelectionChanged="DataGrid1SelectionChanged" IsReadOnly="True" MouseDoubleClick="DataGrid1MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Device Number" />
                <DataGridTextColumn Header="Serial Number" />
                <DataGridTextColumn Header="Device Description" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="_Open" Height="23" Margin="0,12,12,0" Name="button1" VerticalAlignment="Top" HorizontalAlignment="Right" Width="101" IsEnabled="False" Click="Button1Click" />
        <Button Content="_Refresh" Height="23" Margin="0,41,12,0" Name="button2" VerticalAlignment="Top" HorizontalAlignment="Right" Width="101" Click="Button2Click" />
        <Button Content="_Cancel" Height="23" Margin="0,70,12,0" Name="button3" VerticalAlignment="Top" HorizontalAlignment="Right" Width="101" Click="Button3Click" />
    </Grid>
</Window>
